<!--投稿一覧画面-->

<div class="user-info">

</div>


<div class="new-book">
    <h1>New book</h1>
    <%= form_with model:@book, locl:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
</div>

<div class="book-list">
<h1>Books</h1>
<% @books.each do |book| %>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    <p>title: <%= link_to book.title, book_path(book.id) %></p>
    <p>body: <%= book.body %></p>
<% end %>
</div>

