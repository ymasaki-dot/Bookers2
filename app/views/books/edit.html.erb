<div class="container">
  <div class="mt-3">
    <h1>Editing Book</h1>
  </div>
  <%= form_with model:@book, locl:true do |f| %>
    <span>Title<span>
    <div class="form_group  pt-2 pb-3">
      <%= f.text_field :title, size:"85"%>
    </div>
    <span>Opinion</span>
    <div class="form_group pt-2 pb-3" >
      <%= f.text_area :body, size:"85" %>
    </div>
    <div class="mb-3">
      <%= f.submit 'Update Book', class:'btn btn-success' %>
    </div>
  <% end %>
  
  <div class="mb-5">
    <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
  </div>
</div>