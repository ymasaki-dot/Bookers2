<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a href="/" class="navbar-brand text-white"> Bookers</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
             <% if user_signed_in? %>
                 <%= link_to user_path(current_user.id) do %>
                 <li class="nav-item nav-link"><i class="fas fa-home"> Home</i></li>
                 <% end %>
                 <li class="nav-item"><a class="nav-link" href="/users"><i class="fas fa-users"></i>Users</a></li>
                 <li class="nav-item"><a class="nav-link" href="/books"><i class="fas fa-book-open"></i>Books</a></li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                <li class="nav-item nav-link"><i class="fas fa-sign-out-alt"> logout</i></li>
                <% end %>
            <% else %>
                <li class="nav-item"><a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/home/about"><i class="fas fa-link"></i> About</a></li>
                <li class="nav-item"><a class="nav-link" href="/users/sign_up"><i class="fas fa-user-plus"></i> sign up</a></li>
                <li class="nav-item"><a class="nav-link" href="/users/sign_in"><i class="fas fa-sign-in-alt"></i> login</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <body>
    <%= render 'layouts/notification' %>
    <%= yield %>
  </body>

  <footer>
    <div class="container text-center">
      <p>CopyRight Infratop.inc</p>
    </div>
  </footer>
</html>
